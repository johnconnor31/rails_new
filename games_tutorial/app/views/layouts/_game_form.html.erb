<div class="modal fade" id="new-question-modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">New Question</h4>
      </div>
      <%= form_for :game,url:'games#create', html:{ class:'form-horizontal' } do %>
        <div class="modal-body">
          <div class="form-group">
            <label for="game[name]" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
              <input type="text" name="game[name]" class="form-control" id="name"  required>
            </div>
          </div>
          <div class="form-group">
            <label for="game[from]" class="col-sm-2 control-label">Company</label>
            <div class="col-sm-10">
              <input type="text" name="game[from]" class="form-control" id="company"  required>
            </div>
          </div>
          <div class="form-group">
            <label for="game[review]" class="col-sm-2 control-label">Review</label>
            <div class="col-sm-10">
              <textarea class="form-control" name="game[review]" id="review" placeholder="Write something" required></textarea>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
